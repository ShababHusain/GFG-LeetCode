class Solution {
    public int findMinDiff(ArrayList<Integer> arr, int m) {
        int n = arr.size();
        if (m == 0 || n == 0) return 0;
        if (m > n) return -1; // not enough packets to distribute

        Collections.sort(arr);
        int minDiff = Integer.MAX_VALUE;
        for (int i = 0; i <= n - m; ++i) {
            // use long for subtraction safety, then cast to int (values fit in int range)
            int diff = arr.get(i + m - 1) - arr.get(i);
            if (diff < minDiff) minDiff = diff;
        }
        return minDiff;
    }
}
