import java.util.*;

class Solution {
    public int findMoves(int[] chairs, int[] passengers) {
        Arrays.sort(chairs);
        Arrays.sort(passengers);
        
        int totalMoves = 0;
        for (int i = 0; i < chairs.length; i++) {
            totalMoves += Math.abs(chairs[i] - passengers[i]);
        }
        
        return totalMoves;
    }
    
    
}
