class Solution {
    int maxSum(int[] arr) {
        int n = arr.length;
        int sum = 0, R0 = 0;
        
        for (int i = 0; i < n; i++) {
            sum += arr[i];
            R0 += i * arr[i];
        }
        
        int maxVal = R0;
        int currVal = R0;
        
        for (int k = 1; k < n; k++) {
            currVal = currVal + sum - n * arr[n - k];
            maxVal = Math.max(maxVal, currVal);
        }
        
        return maxVal;
    }
}
