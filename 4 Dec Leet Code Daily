class Solution {
    public int countCollisions(String directions) {
        int n = directions.length();
        int i = 0, j = n - 1;

        // Trim leading L's (cars leaving left edge)
        while (i < n && directions.charAt(i) == 'L') i++;
        // Trim trailing R's (cars leaving right edge)
        while (j >= 0 && directions.charAt(j) == 'R') j--;

        if (i > j) return 0; // all cars move away without collision

        int collisions = 0;
        for (int k = i; k <= j; k++) {
            char c = directions.charAt(k);
            if (c != 'S') collisions++;
        }
        return collisions;
    }
}
