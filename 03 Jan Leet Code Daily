class Solution {
    public int numOfWays(int n) {
        long MOD = 1000000007;
        long a = 6, b = 6; // base case
        
        for (int i = 2; i <= n; i++) {
            long newA = (3*a + 2*b) % MOD;
            long newB = (2*a + 2*b) % MOD;
            a = newA;
            b = newB;
        }
        
        return (int)((a + b) % MOD);
    }
}
