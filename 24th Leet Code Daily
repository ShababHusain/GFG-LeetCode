class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {
        int total = 0;
        for (int a : apple) total += a;

        // Sort capacities descending
        Integer[] cap = new Integer[capacity.length];
        for (int i = 0; i < capacity.length; ++i) cap[i] = capacity[i];
        Arrays.sort(cap, Collections.reverseOrder());

        int used = 0;
        int sum = 0;
        for (int c : cap) {
            sum += c;
            used++;
            if (sum >= total) return used;
        }
        // Problem guarantees redistribution is possible, so we should never reach here.
        return used;
    }
}
