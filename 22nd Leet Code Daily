class Solution {
    public int binaryGap(int n) {
        int prevIndex = -1;
        int pos = 0;
        int maxDist = 0;

        while (n > 0) {
            if ((n & 1) == 1) {
                if (prevIndex != -1) {
                    maxDist = Math.max(maxDist, pos - prevIndex);
                }
                prevIndex = pos;
            }
            pos++;
            n >>= 1;
        }
        return maxDist;
    }
}
