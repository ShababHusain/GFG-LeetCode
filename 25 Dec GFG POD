class Solution {
    public ArrayList<Integer> findPeakGrid(int[][] mat) {
        int n = mat.length;
        int m = mat[0].length;
        int left = 0, right = m - 1;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            // find row index of maximum element in column mid
            int maxRow = 0;
            for (int r = 1; r < n; ++r) {
                if (mat[r][mid] > mat[maxRow][mid]) {
                    maxRow = r;
                }
            }

            int midVal = mat[maxRow][mid];
            int leftVal = (mid - 1 >= 0) ? mat[maxRow][mid - 1] : Integer.MIN_VALUE;
            int rightVal = (mid + 1 < m) ? mat[maxRow][mid + 1] : Integer.MIN_VALUE;

            // if midVal is >= both horizontal neighbors, it's a peak
            if (midVal >= leftVal && midVal >= rightVal) {
                ArrayList<Integer> res = new ArrayList<>(2);
                res.add(maxRow);
                res.add(mid);
                return res;
            }

            // move toward the larger neighbor
            if (rightVal > midVal) {
                left = mid + 1;
            } else { // leftVal > midVal
                right = mid - 1;
            }
        }

        // Fallback (should not happen), return (0,0)
        ArrayList<Integer> fallback = new ArrayList<>(2);
        fallback.add(0);
        fallback.add(0);
        return fallback;
    }
}
