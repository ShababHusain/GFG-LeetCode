class Solution {
    public boolean stringStack(String pat, String tar) {
        // code here
        int i = pat.length() - 1;
        int j = tar.length() - 1;

        while (i >= 0 && j >= 0) {
            if (pat.charAt(i) == tar.charAt(j)) {
                i--;
                j--;
            } else {
                i -= 2; // simulate delete: one to append, one to remove
            }
        }

        return j < 0;
    }
}
