class Solution {
    public int countTriples(int n) {
        int count = 0;
        for (int a = 1; a <= n; a++) {
            for (int b = 1; b <= n; b++) {
                long sumSq = 1L * a * a + 1L * b * b;
                int c = (int) Math.sqrt(sumSq);
                if ((long) c * c == sumSq && c <= n) {
                    count++;
                }
            }
        }
        return count;
    }
}
