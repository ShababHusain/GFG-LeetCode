/*
class Node {
    int data;
    Node left, right;

    public Node(int d)
    {
        data = d;
        left = right = null;
    }
}
*/

class Solution {
    int count = 0;
    int result = -1;

    public int kthSmallest(Node root, int k) {
        inOrder(root, k);
        return result;
    }

    private void inOrder(Node node, int k) {
        if (node == null || count >= k) return;

        inOrder(node.left, k);

        count++;
        if (count == k) {
            result = node.data;
            return;
        }

        inOrder(node.right, k);
    }
}
