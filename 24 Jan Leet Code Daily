class Solution {
    public int minPairSum(int[] nums) {
        int n = nums.length;
        java.util.Arrays.sort(nums);
        int ans = 0;
        for (int i = 0; i < n / 2; ++i) {
            int pairSum = nums[i] + nums[n - 1 - i];
            if (pairSum > ans) ans = pairSum;
        }
        return ans;
    }
}
