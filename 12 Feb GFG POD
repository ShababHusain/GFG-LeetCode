class Solution {
    public int maxMinHeight(int[] arr, int k, int w) {
        int n = arr.length;
        int minVal = Integer.MAX_VALUE;
        for (int v : arr) minVal = Math.min(minVal, v);
        long low = minVal;
        long high = minVal + (long)k;
        int ans = minVal;
        while (low <= high) {
            long mid = (low + high) >>> 1;
            if (canAchieve(arr, k, w, mid)) {
                ans = (int) mid;
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return ans;
    }

    private boolean canAchieve(int[] arr, int k, int w, long target) {
        int n = arr.length;
        long[] diff = new long[n + 1];
        long currAdd = 0;
        long used = 0;

        for (int i = 0; i < n; ++i) {
            currAdd += diff[i];
            long curHeight = arr[i] + currAdd;
            if (curHeight < target) {
                long need = target - curHeight;
                used += need;
                if (used > k) return false;
                currAdd += need;
                int end = i + w;
                if (end < n) diff[end] -= need;
            }
        }
        return true;
    }
}
