public class Solution {
    // Reverse bits of a 32-bit integer
    public int reverseBits(int n) {
        int res = 0;
        for (int i = 0; i < 32; i++) {
            res <<= 1;            // make room for next bit
            res |= (n & 1);      // append LSB of n
            n >>>= 1;            // unsigned shift n to bring next bit into LSB
        }
        return res;
    }
}
