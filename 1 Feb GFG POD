class Solution {
    public ArrayList<Integer> maxOfSubarrays(int[] arr, int k) {
        ArrayList<Integer> res = new ArrayList<>();
        if (arr == null || arr.length == 0 || k <= 0) return res;
        int n = arr.length;
        if (k == 1) {
            for (int v : arr) res.add(v);
            return res;
        }
        if (k > n) {
            // according to constraints k <= n, but handle gracefully:
            int max = Integer.MIN_VALUE;
            for (int v : arr) if (v > max) max = v;
            res.add(max);
            return res;
        }

        Deque<Integer> dq = new ArrayDeque<>(); // store indices, values in decreasing order

        for (int i = 0; i < n; i++) {
            // remove indices out of current window from front
            while (!dq.isEmpty() && dq.peekFirst() <= i - k) {
                dq.pollFirst();
            }

            // remove smaller values from back (they can't be max while i is in window)
            while (!dq.isEmpty() && arr[i] >= arr[dq.peekLast()]) {
                dq.pollLast();
            }

            dq.offerLast(i);

            // record max for completed windows
            if (i >= k - 1) {
                res.add(arr[dq.peekFirst()]);
            }
        }

        return res;
    }
}
