import java.util.*;

class Solution {
    public boolean pyramidTransition(String bottom, List<String> allowed) {
        // build map: pair -> list of possible top chars
        Map<String, List<Character>> map = new HashMap<>();
        for (String s : allowed) {
            String key = s.substring(0, 2);
            char top = s.charAt(2);
            map.computeIfAbsent(key, k -> new ArrayList<>()).add(top);
        }

        // memoization for bottoms that cannot lead to a solution
        Set<String> dead = new HashSet<>();
        return dfs(bottom, map, dead);
    }

    private boolean dfs(String bottom, Map<String, List<Character>> map, Set<String> dead) {
        if (bottom.length() == 1) return true;
        if (dead.contains(bottom)) return false;

        // For any adjacent pair, if no possible top, this bottom is impossible
        int m = bottom.length();
        for (int i = 0; i < m - 1; ++i) {
            String pair = bottom.substring(i, i + 2);
            if (!map.containsKey(pair)) {
                dead.add(bottom);
                return false;
            }
        }

        // generate all possible next-level strings via backtracking
        List<String> nextLevels = new ArrayList<>();
        StringBuilder sb = new StringBuilder();
        buildNext(0, bottom, sb, nextLevels, map);

        // try each next-level
        for (String next : nextLevels) {
            if (dfs(next, map, dead)) return true;
        }

        dead.add(bottom);
        return false;
    }

    private void buildNext(int pos, String bottom, StringBuilder sb,
                           List<String> nextLevels, Map<String, List<Character>> map) {
        if (pos == bottom.length() - 1) {
            nextLevels.add(sb.toString());
            return;
        }
        String pair = bottom.substring(pos, pos + 2);
        List<Character> candidates = map.get(pair);
        if (candidates == null) return; // no candidate, will be pruned earlier
        for (char c : candidates) {
            sb.append(c);
            buildNext(pos + 1, bottom, sb, nextLevels, map);
            sb.deleteCharAt(sb.length() - 1);
        }
    }

    
}
