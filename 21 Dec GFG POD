import java.util.*;

class Solution {
    public ArrayList<Integer> countXInRange(int[] arr, int[][] queries) {
        ArrayList<Integer> result = new ArrayList<>();
        
        for (int[] q : queries) {
            int l = q[0], r = q[1], x = q[2];
            
            // Find leftmost index of x in [l, r]
            int left = lowerBound(arr, l, r, x);
            // Find rightmost index of x in [l, r]
            int right = upperBound(arr, l, r, x);
            
            // Count = right - left
            result.add(right - left);
        }
        
        return result;
    }
    
    // Equivalent to C++ lower_bound
    private int lowerBound(int[] arr, int l, int r, int x) {
        int low = l, high = r + 1;
        while (low < high) {
            int mid = low + (high - low) / 2;
            if (arr[mid] < x) {
                low = mid + 1;
            } else {
                high = mid;
            }
        }
        return low;
    }
    
    // Equivalent to C++ upper_bound
    private int upperBound(int[] arr, int l, int r, int x) {
        int low = l, high = r + 1;
        while (low < high) {
            int mid = low + (high - low) / 2;
            if (arr[mid] <= x) {
                low = mid + 1;
            } else {
                high = mid;
            }
        }
        return low;
    }
}
