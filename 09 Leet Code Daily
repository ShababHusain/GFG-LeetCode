public class Solution {
    public List<Integer> findDuplicates(int[] arr) {
        List<Integer> res = new ArrayList<>();
        for (int i = 0; i < arr.length; i++) {
            int v = Math.abs(arr[i]);
            int idx = v - 1;
            if (arr[idx] < 0) {
                // already visited once -> duplicate
                res.add(v);
            } else {
                // mark visited
                arr[idx] = -arr[idx];
            }
        }
        return res;
    }
}
