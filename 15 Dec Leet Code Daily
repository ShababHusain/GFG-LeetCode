class Solution {
    public long getDescentPeriods(int[] prices) {
        long count = 0;
        int streak = 0;
        for (int i = 0; i < prices.length; i++) {
            if (i == 0 || prices[i] != prices[i - 1] - 1) {
                streak = 1; // start new descent period
            } else {
                streak += 1; // extend previous descent period
            }
            count += streak;
        }
        return count;
    }
}
