class Solution {
    public int minimumDifference(int[] nums, int k) {
        int n = nums.length;
        if (k <= 1) return 0;               // single element -> difference 0
        Arrays.sort(nums);
        int ans = Integer.MAX_VALUE;
        for (int i = 0; i + k - 1 < n; ++i) {
            int diff = nums[i + k - 1] - nums[i];
            if (diff < ans) ans = diff;
        }
        return ans;
    }
}
