class Solution {
    public List<Integer> replaceNonCoprimes(int[] nums) {
        List<Integer> stack = new ArrayList<>();

        for (int num : nums) {
            stack.add(num);
            while (stack.size() >= 2) {
                int b = stack.get(stack.size() - 1);
                int a = stack.get(stack.size() - 2);
                int g = gcd(a, b);
                if (g == 1) break;

                stack.remove(stack.size() - 1);
                stack.set(stack.size() - 1, lcm(a, b, g));
            }
        }

        return stack;
    }

    private int gcd(int a, int b) {
        while (b != 0) {
            int tmp = b;
            b = a % b;
            a = tmp;
        }
        return a;
    }

    private int lcm(int a, int b, int g) {
        return (int)((long)a * b / g);
    }
}
