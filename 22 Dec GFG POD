class Solution {
    public int rowWithMax1s(int[][] arr) {
        int n = arr.length;
        int m = arr[0].length;
        
        int maxRow = -1;
        int j = m - 1; // start from top-right corner
        
        for (int i = 0; i < n; i++) {
            while (j >= 0 && arr[i][j] == 1) {
                j--;        // move left if we see 1
                maxRow = i; // update row index
            }
        }
        
        return maxRow;
    }
}
