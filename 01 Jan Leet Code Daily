class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;
        for (int i = n - 1; i >= 0; --i) {
            if (digits[i] < 9) {
                digits[i] += 1;
                return digits;
            }
            digits[i] = 0;
        }
        // If we reach here, all digits were 9
        int[] res = new int[n + 1];
        res[0] = 1;
        // rest are 0 by default
        return res;
    }
}
