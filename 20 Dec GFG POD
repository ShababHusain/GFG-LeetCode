class Solution {
    public int searchInsertK(int[] arr, int k) {
        int low = 0, high = arr.length - 1;
        
        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] == k) {
                return mid; // Found
            } else if (arr[mid] < k) {
                low = mid + 1; // Search right
            } else {
                high = mid - 1; // Search left
            }
        }
        
        // Not found â†’ low is the insert position
        return low;
    }
    
    
}
