import java.util.Arrays;

class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        Arrays.sort(happiness);
        int n = happiness.length;
        long ans = 0L;
        for (int i = 0; i < k; ++i) {
            int idx = n - 1 - i; // i-th largest element
            if (idx < 0) break;
            long val = (long) happiness[idx] - i;
            if (val <= 0) break;
            ans += val;
        }
        return ans;
    }
}
