import java.util.*;

class Solution {
    public int maxDistinctElements(int[] nums, int k) {
        Arrays.sort(nums);
        long lastUsed = Long.MIN_VALUE;
        int count = 0;
        
        for (int num : nums) {
            long start = (long)num - k;
            long end = (long)num + k;
            
            // we want the next available number after 'lastUsed'
            long candidate = Math.max(start, lastUsed + 1);
            if (candidate <= end) {
                count++;
                lastUsed = candidate; // reserve this value
            }
        }
        return count;
    }
}
